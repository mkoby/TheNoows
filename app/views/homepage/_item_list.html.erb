<div id="itemList">
  <% if @items.empty? %>
    <h2>No News Items to Display *sad panda*</h2>
  <% else %>
    <% @items.each do |item| %>
      <% news_item = item.respond_to?('news_item') ? item.news_item : item %>
      <%= render :partial => 'item', :locals => { :news_item => news_item } %>
    <% end %>
    <div class="pageList">
      <%= will_paginate @items %>
    </div
  <% end %>
</div>

