<div class="newsitem">
  <p>
  <span>
	  <%=
		  content_tag 'div', 
			link_to_unless(user_has_item, 'Noows?', vote_up_news_item_path(news_item), { :class => 'noowsButton' }) { 
				content_tag 'style', 'Noows', :class => 'noowsedButton' 
			},
		  	{ :id => news_item.id,
		      :onclick => user_has_item ? '' : "vote(#{news_item.id}, #{current_user ? 'true' : 'false'});return false;"
		  	}
	  %>
    <div class="iteminfo">
		  <%= link_to news_item.title, news_item.link, :class => 'itemlink' %>
      <div class="underItemTitle">
        published at <%= news_item.published_at %> on <%= link_to news_item.source.name, news_item.source.homepage_url %>
      </div>
    </div>
  </span>
  </p>
  </br>
</div>

